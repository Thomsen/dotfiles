! x config

Xft.rgba: rgb
Xft.hinting: true
Xft.antialias: true
Xcursor.theme: DMZ-White
Xft.hintstyle: hintslight

!! xterm config

! close beep sound
!xset b off

! general settings
xterm*termName: xterm-256color
xterm*geometry: 100x28
xterm*saveLines: 2048
! up page left, down page right, drag middle
xterm*scrollBar: false
xterm*loginshell: false
xterm*background: #2b2b2b
xterm*foreground: #a9b7c6
xterm*cursorBlink: false
xterm*cursorColor: #8ae234
xterm*bellIsUrgent: true

! trim trailing spaces
xterm*trimSelection: true

! fix alt-key inputting
xterm*eightBitInput: false
xterm*metaSendsEscape: true

! copy and paste with clipboard
xterm*translations: #override \
	Ctrl Shift <KeyPress> C: copy-selection(CLIPBOARD) \n\
	Ctrl Shift <KeyPress> V: insert-selection(CLIPBOARD)
	Ctrl <KeyPress> V: insert-selection(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
	<BtnUp>: select-end(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
	Ctrl <KeyPress> P: print() \n

! allow selecting email/url by double-click
xterm*charClass: 33:48,37-38:48,45-47:48,64:48,58:48,126:48,61:48,63:48,43:48,35:48

! tango color scheme (purcell tomorrow-eighties)
xterm*color0: #1e1e1e
xterm*color1: #cc0000
xterm*color2: #4e9a06
xterm*color3: #c4a000
xterm*color4: #3465a4
xterm*color5: #75507b
xterm*color6: #0b939b
xterm*color7: #d3d7cf
xterm*color8: #555753
xterm*color9: #ef2929
xterm*color10: #8ae234
xterm*color11: #fce94f
xterm*color12: #729fcf
xterm*color13: #ad7fa8
xterm*color14: #00f5e9
xterm*color15: #eeeeec

!! font
Emacs.Fontset-0:*-adobe-Source Code Pro-normal-normal-normal-*-15-*-*-*-m-0-iso10646-1
Emacs.font: Source Code Pro

!xterm*faceName: DejaVu Sans Mono:pixelsize=15:antialias=true
xterm*faceName: Source Code Pro:pixelsize=13:antialias=true

!xterm*faceNameDoublesize: WenQuanYi Zen Hei Mono:pixelsize=14:antialias=true
xterm*faceNameDoublesize: YaHei Consolas Hybrid:pixelsize=12:antialias=true

!! fonts and encoding
xterm*utf8: true
xterm*locale: zh_CN.UTF-8
xterm*utf8Title: true
xterm*renderFont: true
xterm*scaleHeight: 1.1
xterm*preeditType: Root
xterm*xftAntialias: true

